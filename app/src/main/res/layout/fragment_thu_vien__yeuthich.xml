<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Fragment.ThuVien_YeuthichFragment">

    <TextView
        android:id="@+id/txt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/canhbaobaihatyeuthich"
        android:textColor="@color/TEXT" />

    <Button
        android:id="@+id/btn_phatngaynhien"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:backgroundTint="@color/xanh"
        android:text="@string/phatngaungien"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_baihaiyeuthich"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_phatngaynhien"
        android:layout_marginTop="10dp" />

</RelativeLayout>