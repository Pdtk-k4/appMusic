<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.DiaNhacFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgdianhac"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/xam_nhat"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/imgbtnshare"
            android:layout_width="18dp"
            android:layout_height="15dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/share"
            app:tint="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/imgbtnshare"
            android:layout_toStartOf="@id/imgbtnheart"
            android:gravity="center">

            <TextView
                android:id="@+id/id_tenbaihat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/id_tencasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:textColor="@color/xam_nhat"
                android:textSize="12sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/imgbtnheart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/heart"
            app:tint="@android:color/white" />


    </RelativeLayout>

</LinearLayout>